---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ certificate_secret }}
  namespace: {{ cert_namespace }}
spec:
  secretName: nginx-hello-tls-secret
  issuerRef:
    name: {{ cluster_issuer_name }}
    kind: ClusterIssuer
  dnsNames:
{% for d in cert_domains %}
    - "{{ d }}"
{% endfor %}

