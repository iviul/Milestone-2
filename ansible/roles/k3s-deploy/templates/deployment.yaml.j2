apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ item.name }}
  labels:
    app: {{ item.app }}
spec:
  replicas: {{ item.replicas }}
  selector:
    matchLabels:
      app: {{ item.app }}
  template:
    metadata:
      labels:
        app: {{ item.app }}
    spec:
      {% if item.registry != 'dockerhub' -%}
      imagePullSecrets:
        - name: {{ cloud_provider }}-registry-secret
      {% endif -%}
      containers:
      - name: {{ item.app }}
        image: {{ registry_urls[item.registry] }}/{{ item.image }}:{{ item.version }}
        ports:
        - containerPort: {{ item.port }}